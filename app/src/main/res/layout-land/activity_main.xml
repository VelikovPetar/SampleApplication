<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.velik_000.sampleapplication.MainActivity">

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/records_list_view"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/display_records_button"
        android:layout_toEndOf="@+id/display_records_button"
        android:layout_marginLeft="53dp"
        android:layout_marginStart="53dp"
        android:layout_marginTop="16dp" />

    <Button
        android:text="Notify Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/notify_records_button"
        android:layout_alignTop="@+id/records_list_view"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="82dp"
        android:layout_marginStart="82dp" />

    <Button
        android:text="Display Records"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:id="@+id/display_records_button"
        android:layout_below="@+id/notify_records_button"
        android:layout_alignLeft="@+id/notify_records_button"
        android:layout_alignStart="@+id/notify_records_button" />
</RelativeLayout>
